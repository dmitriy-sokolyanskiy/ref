source 'https://rubygems.org'

git_source(:github) { |repo_name| "https://github.com/#{repo_name}" }

group :development do
  gem 'fasterer'
  gem 'i18n'
  gem 'pry-byebug'
  gem 'rubocop'
  gem 'rubocop-rspec'
end

group :test do
  gem 'rspec', '~> 3.8'
  gem 'rspec_junit_formatter'
  gem 'simplecov'
  gem 'simplecov-lcov'
  gem 'undercover'
end
